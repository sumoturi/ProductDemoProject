<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.java.demo.bo">

	<class name="ProductDO" table="PRODUCTS">
		<id name="shoeId" column="SHOE_ID">
			<generator class="assigned" />
		</id>
		<property name="shoeName" column="SHOE_NAME" />
		<property name="shoeDescription" column="SHOE_DESCRIPTION" />
		<property name="shoePolish" column="SHOE_POLISH" />

	</class>
</hibernate-mapping>